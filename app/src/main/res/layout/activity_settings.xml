<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="227dp"
        android:layout_height="357dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/request"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:elevation="30dp"
                android:fontFamily="@font/productsans"
                android:text="@string/request_a_feature"
                android:textColor="@color/ic_launcher_background" />

            <Button
                android:id="@+id/devs"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_background"
                android:elevation="30dp"
                android:fontFamily="@font/productsans"
                android:text="@string/developers"
                android:textColor="@color/ic_launcher_background" />

            <Button
                android:id="@+id/myacc"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_background"
                android:elevation="30dp"
                android:fontFamily="@font/productsans"
                android:text="@string/my_account"
                android:textColor="@color/ic_launcher_background" />

            <Button
                android:id="@+id/privacy"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_background"
                android:elevation="30dp"
                android:fontFamily="@font/productsans"
                android:text="@string/privacy_info"
                android:textColor="@color/ic_launcher_background" />

            <Button
                android:id="@+id/my_name"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_background"
                android:elevation="30dp"
                android:fontFamily="@font/productsans"
                android:text="@string/saved_file_name"
                android:textColor="@color/ic_launcher_background" />

            <Button
                android:id="@+id/take_notes_journey"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_background"
                android:elevation="30dp"
                android:fontFamily="@font/productsans"
                android:text="@string/take_notes_journey"
                android:textColor="@color/ic_launcher_background" />


        </LinearLayout>
    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sign_up_anim"
        android:layout_width="88dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:lottie_autoPlay="false"
        app:lottie_fileName="sign_up_loader.json"
        app:lottie_loop="true" />

    <Button
        android:id="@+id/share"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="536dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>